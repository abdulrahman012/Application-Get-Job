<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_tambah_kontak"
    tools:context=".TambahProject">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ic_kembali_tambahproject"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/ic_kembali"
            android:layout_marginLeft="20dp"/>

        <TextView
            android:id="@+id/TVprofil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ic_nav_menu"
            android:layout_marginLeft="25dp"
            android:fontFamily="@font/poppins_bold"
            android:layout_marginTop="3dp"
            android:text="Tambah Project"
            android:textColor="@color/color2"
            android:textSize="20dp" />

    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="145dp"
        android:layout_height="145dp"
        android:layout_marginTop="40dp"
        android:padding="5dp"
        android:layout_gravity="center_horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/pic_tambah_project"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/noimages"
            app:civ_border_width="4dp"
            app:civ_border_color="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:background="@drawable/bg_ic_gambar"
            android:gravity="center"
            app:civ_border_color="@color/white"
            app:civ_border_width="7dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageButton
                android:id="@+id/IM_tambahfoto_project"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/ic_foto"
                android:clickable="true"
                android:elevation="3dp"
                tools:ignore="MissingConstraints" />
        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:paddingHorizontal="30dp"
        android:paddingVertical="10dp">

        <EditText
            android:id="@+id/nama_project"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text_bg"
            android:fontFamily="@font/poppins_bold"
            android:hint="Nama Project"
            android:textSize="14sp"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_marginTop="20dp"
            android:drawableLeft="@drawable/ic_nama_project"
            android:drawablePadding="15dp" />

        <EditText
            android:id="@+id/kategori"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text_bg"
            android:fontFamily="@font/poppins_bold"
            android:hint="Kategori"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:textSize="14sp"
            android:maxLength="25"
            android:layout_marginTop="8dp"
            android:paddingBottom="12dp"
            android:drawableLeft="@drawable/ic_kategori"
            android:drawablePadding="15dp" />

        <EditText
            android:id="@+id/deadline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/edit_text_bg"
            android:drawableLeft="@drawable/ic_waktu"
            android:drawablePadding="15dp"
            android:fontFamily="@font/poppins_bold"
            android:hint="Deadline"
            android:maxLength="14"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/gaji"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/edit_text_bg"
            android:fontFamily="@font/poppins_bold"
            android:hint="Gaji"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textSize="14sp"
            android:drawableLeft="@drawable/ic_gaji"
            android:drawablePadding="15dp" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:paddingHorizontal="30dp"
        android:paddingBottom="10dp">

        <Button
            android:id="@+id/BTNTambahProject"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="5dp"
            android:background="@drawable/button_tambah_kontak_bg"
            android:text="Tambah Project"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:textStyle="bold" />


    </RelativeLayout>

</LinearLayout>